---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import SocialPill from "@/components/SocialPill.astro";

const menuitems = [
  {
    title: "Inicio",
    label: "inicio",
    url: "/",
  },
  {
    title: "Servicios",
    label: "servicios",
    url: "/#services",
  },
  {
    title: "Nosotros",
    label: "nosotros",
    url: "/#about",
  },
  {
    title: "Proyectos",
    label: "proyectos",
    url: "/#projects",
  },
  {
    title: "Blog",
    label: "blog",
    url: "/#blog",
  },
];
---

<header
  class="flex lg:max-w-5xl md:max-w-2xl flex-col lg:flex-row justify-between items-center my-5 lg:mx-auto mx-4"
>
  <Astronav>
    <div class="flex w-full lg:w-auto items-center justify-between">
      <a href="/">
        <img
          src="./logo-cyw.svg"
          alt="Logo de saneamientos ambientasles c&w"
          class="lg:size-14 size-10"
        />
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="w-6 h-6 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
      <ul class="flex flex-col lg:flex-row lg:gap-3">
        {
          menuitems.map(({ title, url, label }) => (
            <>
              <li>
                <a
                  href={url}
                  aria-label={label}
                  class="flex lg:px-3 py-2 items-center justify-center text-gray-700 hover:text-gray-900 hover:border-b-2 hover:border-green-400"
                >
                  <span> {title}</span>
                </a>
              </li>
            </>
          ))
        }
      </ul>
    </MenuItems>
  </Astronav>
  <div>
    <div class="hidden lg:flex items-center gap-4">
      <SocialPill
        aria-hidden="true"
        href="mailto:servicios.ambientales@cywsac.com"
        class="hidden lg:inline-block border border-green-700 p-2 rounded-lg hover:bg-green-300 hover:text-white"
      >
        Escr√≠benos
      </SocialPill>
    </div>
  </div>
</header>
